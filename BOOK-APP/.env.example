# Supabase Configuration
# Local Development (Supabase Local)
EXPO_PUBLIC_SUPABASE_URL=http://localhost:54321
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-local-anon-key-here

# Production (Uncomment for production builds)
# EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# EXPO_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key-here

# External APIs
# Google Books API for external book search
EXPO_PUBLIC_GOOGLE_BOOKS_API_KEY=your-google-books-api-key-here

# Open Library API (no key required, but rate-limited)
EXPO_PUBLIC_OPEN_LIBRARY_API_URL=https://openlibrary.org/api

# Error Monitoring
# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Analytics
# PostHog API key for analytics
POSTHOG_API_KEY=your-posthog-api-key-here
POSTHOG_HOST=https://app.posthog.com

# Environment
NODE_ENV=development

# Feature Flags
EXPO_PUBLIC_ENABLE_OCR=false
EXPO_PUBLIC_ENABLE_EPUB=false
EXPO_PUBLIC_ENABLE_COLLABORATION=false

# File Upload Limits
EXPO_PUBLIC_MAX_FILE_SIZE=209715200
EXPO_PUBLIC_ALLOWED_FILE_TYPES=application/pdf,application/epub+zip

# Storage Limits (bytes)
EXPO_PUBLIC_FREE_TIER_STORAGE=104857600
EXPO_PUBLIC_PAID_TIER_STORAGE=10737418240
